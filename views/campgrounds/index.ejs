<% layout('layouts/boilerplate') %>

  <div class=" container mx-auto ">

    <h1 class="p-4 text-4xl font-bold"> All Camps</h1>


    <% for (let i = 0; i < campgrounds.length; i++) { %>
      <div class="w-[90%] ml-12 h-full mt-4 mb-6 p-4 bg-black shadow-sm rounded-lg transition-shadow duration-300 hover:shadow-[2px_2px_2px_rgba(255,255,255,0.3)]">
          <div class="flex flex-col md:flex-row">
              <div class="md:w-1/3">
                  <img class="w-[80%] h-48 object-cover " alt="" src="<%= campgrounds[i].image %>">
              </div>
              <div class="md:w-2/3 mt-4 md:mt-0 md:ml-3">
                  <div class="space-y-2">
                      <h5 class="text-xl font-semibold text-white"><%= campgrounds[i].title %></h5>
                      <p class="text-gray-300"><%= campgrounds[i].description %></p>
                      <p class="text-sm text-gray-500"><%= campgrounds[i].location %></p>
                      <div class="flex justify-end"><a class="inline-block px-3 py-1.5 mt-2 bg-blue-700 text-white rounded-lg hover:bg-blue-800 transition" href="/campgrounds/<%= campgrounds[i]._id %>">
                        View <%= campgrounds[i].title %>
                    </a></div>
                      
                  </div>
              </div>
          </div>
      </div>
      <% if (i < campgrounds.length - 1) { %>
          <div class="my-4 w-3/4 mx-auto border-t border-gray-600"></div>
      <% } %>
  <% } %>