                        <%= campground.location %>
                    </div>
                    <div class="flex items-center gap-2">
                        <i class="fas fa-star text-amber-400"></i>
                        5.0 
                    </div>
                </div>
            </div>
         
        </div>
    </div>

    <!-- Main Content -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Left Column -->
